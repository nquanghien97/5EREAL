generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum USER_ROLE {
  USER
  ADMIN
  STAFF
}

model user {
  id          Int       @id @default(autoincrement())
  phoneNumber String    @unique
  fullName    String
  password    String
  role        USER_ROLE @default(USER)
  createdAt   DateTime  @default(now())

  news              news[]              @relation("UserNews")
  coordinates       coordinates[]       @relation("UserCoordinates")
  projects          projects[]          @relation("UserProjects")
  images_review_bds images_review_bds[] @relation("UserImagesReview")
}

model coordinates {
  id        Int      @id @default(autoincrement())
  lat       Float
  lng       Float
  note      String?  @db.LongText
  userId    Int
  user      user     @relation("UserCoordinates", fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  images_review_bds images_review_bds[]
}

model news {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  summary     String   @db.LongText
  thumbnailId Int // Thay v√¨ String
  thumbnail   images   @relation("NewsThumbnail", fields: [thumbnailId], references: [id])
  isHotNews   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    Int
  author      user     @relation("UserNews", fields: [authorId], references: [id])

  sections news_sections[]
}

model news_sections {
  id         Int      @id @default(autoincrement())
  newsId     Int
  imageId    Int? // Thay v√¨ String?
  image      images?  @relation("NewsSectionImage", fields: [imageId], references: [id])
  content    String?  @db.LongText
  caption    String?
  orderIndex Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  news news @relation(fields: [newsId], references: [id], onDelete: Cascade)
}

model projects {
  id                   Int      @id @default(autoincrement())
  name                 String
  fullName             String
  slug                 String   @unique
  location             String
  totalArea            Int
  constructionRate     Float
  floorHeightMin       Int
  floorHeightMax       Int
  type                 String
  numberOfUnits        Int
  investor             String
  thumbnailId          Int
  thumbnail            images   @relation("ProjectThumbnail", fields: [thumbnailId], references: [id])
  backgroundOverviewId Int?
  backgroundOverview   images?  @relation("ProjectBackground", fields: [backgroundOverviewId], references: [id])
  authorId             Int
  author               user     @relation("UserProjects", fields: [authorId], references: [id])
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  sections project_sections[]
}

enum SECTION_TYPE {
  TIEN_ICH
  THU_VIEN_HINH_ANH
  NORMAL
}

model project_sections {
  id          Int          @id @default(autoincrement())
  projectId   Int
  type        SECTION_TYPE
  caption     String?
  title       String?
  description String?      @db.Text
  content     String?      @db.LongText
  orderIndex  Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  project projects @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // üí° th√™m quan h·ªá 1-n t·ªõi b·∫£ng ph·ª•
  section_images project_section_images[]
}

model project_section_images {
  id         Int      @id @default(autoincrement())
  sectionId  Int
  imageId    Int
  orderIndex Int      @default(0)
  createdAt  DateTime @default(now())

  section project_sections @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  image   images           @relation(fields: [imageId], references: [id])
}

model images {
  id        Int      @id @default(autoincrement())
  url       String // ƒê·ªïi t√™n t·ª´ imageUrl sang url cho ng·∫Øn g·ªçn
  alt       String? // Th√™m alt text cho SEO
  mimeType  String? // image/jpeg, image/png, etc.
  createdAt DateTime @default(now())

  // Relations
  newsThumbnails     news[]          @relation("NewsThumbnail")
  newsSections       news_sections[] @relation("NewsSectionImage")
  projectThumbnails  projects[]      @relation("ProjectThumbnail")
  projectBackgrounds projects[]      @relation("ProjectBackground")

  projectSectionImages project_section_images[]
}

model images_review_bds {
  id            Int         @id @default(autoincrement())
  url           String
  userId        Int
  user          user        @relation("UserImagesReview", fields: [userId], references: [id])
  coordinatesId Int
  coordinates   coordinates @relation(fields: [coordinatesId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
